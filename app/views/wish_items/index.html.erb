<h1>Listing wish_items</h1>

<table>
  <tr>
    <th>Description</th>
    <th>Link</th>
    <th>Completed</th>
    <th>Completed at</th>
    <th>Wishlist</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @wish_items.each do |wish_item| %>
  <tr>
    <td><%= wish_item.description %></td>
    <td><%= wish_item.link %></td>
    <td><%= wish_item.completed %></td>
    <td><%= wish_item.completed_at %></td>
    <td><%= wish_item.wishlist %></td>
    <td><%= link_to 'Show', [wish_item.wish_list, wish_item] %></td>
    <td><%= link_to 'Edit', edit_wish_list_wish_item_path(wish_item.wish_list, wish_item) %></td>
    <td><%= link_to 'Destroy', [wish_item.wish_list, wish_item], method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

